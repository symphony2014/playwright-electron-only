{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      /*
        The following two serve different purposes:
         - @foo/* is for importing types only,
         - .../lib/* means require dependency
      */
      "@isomorphic/*": ["./packages/electron-proxy/src/utils/isomorphic/*"],
      "electron-proxy/lib/*": ["./packages/electron-proxy/src/*"],
    },
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": ["packages"],
  "exclude": [
    "packages/*/lib",
    "packages/html-reporter/",
  ]
}
